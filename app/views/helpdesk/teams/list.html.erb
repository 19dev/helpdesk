<h1><%= Helpdesk::Team.model_name.human(count: 2) %></h1>
<hr>
<div class="row">
	
	<div class="col-md-12">		
		<ul id="teams_list" class="list-group">
			<% @teams.each do |team| %>
				<li class="list-group-item">
					<%= link_to team.title, helpdesk.team_path(team), remote: true %>
				</li>
			<% end %>
		</ul>

		<div>
			<%= link_to t("simple_form.helpers.defaults.add", model: Helpdesk::Team.model_name.human), helpdesk.teams_path, class: "btn blue" %>
		</div>

	</div>

	<div class="col-md-12" id="team_profile">
		
	</div>
</div>