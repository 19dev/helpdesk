<div class="portlet box" >
  <div class="portlet-body form" >
    <%= simple_form_for @team, validate: true, remote: true, html: { class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <div class="form-body">
      <%= f.input :title %>
      <%= f.input :email %>
    </div>
       <%= f.submit class: "btn btn-success" %>
    <%end%>
  </div>
</div>
