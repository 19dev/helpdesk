<div class="portlet box green">
  <%= render "shared/portlet_title", title: t("tickets.defaults.show_page_header") %>

  <div class="portlet-body form">

    <%= simple_form_for(@ticket, validate: true, html: { class: "horizontal-form" }) do |f| %>
      <%= f.error_notification %>
      <%= f.error :base, :error_method => :to_sentence %>

      <div class="form-body">

        <div class="row">
          <div class="col-md-8">
          <div class="col-md-8">
            <%= f.input :title %>
            <%= f.input :desc, input_html: { rows: "4" } %>
            </div>
          </div>
            <div class="col-md-2">
            <%= f.input :priority, as: :select, collection: Nimbos::Listitem.helpdesk_priority.map { |t| [t.name, t.code] } %>
            <%= f.input :work_time, input_html: { class: "involine-unit-price" } %>
            <%= f.input :team_id, as: :select, collection: Helpdesk::Team.all %>
             </div>
             </div>
             </div>
             </div>
             </div>
            </div>
            
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit t("tickets.action.create"), class: "btn btn-success" %>
        <%= link_to "Cancel", tickets_path, class: "btn" %>
      </div>
    <% end %>
  </div>
</div>
