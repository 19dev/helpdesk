<div class="portlet box green">
  <%= render "shared/portlet_title", title: t("tickets.defaults.show_page_header") %>

  <div class="portlet-body form">

    <%= simple_form_for(@ticket, validate: true, html: { class: "horizontal-form" }) do |f| %>
      <%= f.error_notification %>
      <%= f.error :base, :error_method => :to_sentence %>

      <div class="form-body">

        <div class="row">
          <div class="col-md-8">
            <%= f.input :title, label: t("tickets.label.title"), hint: t("tickets.hint.title") %>
            <%= f.input :desc, label: t("tickets.label.desc"), placeholder: t("tickets.placeholder.desc"), input_html: { rows: "4" } %>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit t("tickets.action.create"), class: "btn btn-success" %>
        <%= link_to "Cancel", tickets_path, class: "btn" %>
      </div>
    <% end %>
  </div>
</div>
