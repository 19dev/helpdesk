<h1>Listing tickets</h1>

<table class="table-condensed">
  <tr>
    <th class="span5">Title</th>
    <th class="span1">User</th>
    <th class="span1">Status</th>
    <th class="span3">Assigned</th>
    <th class="span2">Close date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket.title %></td>
    <td><%= ticket.user_id %></td>
    <td><%= ticket.status %></td>
    <td><%= ticket.assigned_id %></td>
    <td><%= ticket.close_date %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ticket', new_ticket_path %>
